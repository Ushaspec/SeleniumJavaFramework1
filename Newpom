                </executions>
            </plugin>
            <!-- Cucumber JVM Parallel Plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-test-sources</phase>
                        <configuration>
                            <target>
                                <taskdef name="cucumber-jvm-parallel"
                                         classname="com.github.temyers.cucumber.execution.ParallelCucumberITGeneratorPlugin"
                                         classpathref="maven.plugin.classpath" />

                                <cucumber-jvm-parallel
                                        featuresDirectory="src/test/resources/Feature"
                                        glue="StepDefinition"
                                        outputDirectory="src/test/java/Runner"
                                        packageName="Runner"
                                        namingScheme="simple"
                                        useTestNG="true"
                                        parallelScheme="FEATURE"
                                        strict="false"
                                        monochrome="false"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
